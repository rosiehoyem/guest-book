<div class="row">
  <div class="col-md-2"></div>
  	<div class="col-md-8">
  		<h1>Log In</h1>

			<%= form_tag sessions_path, html: {class: "form-horizontal"} do %>
			  <div class="form-group">	
			    <%= label_tag :email %><br />
			    <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>
			  </div>
			  <div class="form-group">	
			    <%= label_tag :password %><br />
			    <%= password_field_tag :password, class: "form-control", placeholder: "Password" %>
			  </div>
			  <div class="form-group">
			  	<div class="actions"><%= submit_tag "Log In", class: "btn btn-primary" %></div>
				</div>
			<% end %>
		</div>
  <div class="col-md-2"></div>
</div>