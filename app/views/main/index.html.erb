<div class="row">
  <div class="col-md-2"></div>
  	<div class="col-md-8">
  	<h2>Leave a message.</h2>
  	<%= render "users/new_message_form" %>

  	<hr>
  	<h2>Past visitors:</h2>
  		<% @messages.each do |message| %>
  		<div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= message.created_at %></h3>
        </div>
        <div class="panel-body">
          <%= message.user.name %> from <%=message.user.location%> says:
          <blockquote><%=message.content%></blockquote>
        </div>
      </div>
      <%end%>
  		
		</div>
  <div class="col-md-2"></div>
</div>
